<html>
	<body>
		<div>
			<% if current_user %>
				<a href="/posts/new">Criar novo post</a> | <%= link_to "Sair", sign_out_path, method: "delete" %>
			<% else %>
				<a href="/sessions/new">Login</a> | <a href="/usuarios/new">Cadastre-se</a>
			<% end -%>
		</div>
		<div id='container'>
			<%= render 'list_posts' -%>
			<div id='conteudo'>
				<% @posts.each do |p| %>
					<div id='post'>
						<div> <%= p.titulo.html_safe -%> </div>
						<div> <%= p.conteudo.html_safe -%> </div>
					</div>
				<% end %>
			</div>
		</div>
	</body>
</html>